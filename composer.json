{
    "name": "yannickl88/awsomecms",
    "description": "Simple and lightweight CMS",
    "license": "GPL",
    "authors": [
        {
            "name": "Yannick de Lange",
            "email": "yannick.l.88@gmail.com"
        }
    ],
    "require": {
        "php"                           : ">=5.4",
        "symfony/symfony"               : "2.6.*",
        "doctrine/orm"                  : "~2.2,>=2.2.3,<2.5",
        "doctrine/dbal"                 : "<2.5",
        "doctrine/doctrine-bundle"      : "~1.2",
        "hostnet/form-handler-bundle"   : "^1.0.0",
        "twig/extensions"               : "~1.0",
        "smarty/smarty"                 : "3.1.*",
        "symfony/swiftmailer-bundle"    : "~2.3",
        "symfony/monolog-bundle"        : "~2.4",
        "sensio/framework-extra-bundle" : "~3.0,>=3.0.2"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        },
        "classmap": ["components/", "core/", "libs/"]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    }
}
