{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block content %}
<h2>News overview ({{ items | length }} items)</h2>

<table class="admin_table">
    <thead>
        <tr class="admin_table_header">
            <th class="admin_table_header">Title</th>
            <th class="admin_table_header">User</th>
            <th class="admin_table_header">Date</th>
            <th class="admin_table_header">Hidden</th>
            <th class="admin_table_header admin_table_actions">
                <img src="/img/icons/add.png" alt="add"> <a href="{{ path('admin-news-add') }}">Add</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
        <tr class="admin_table_row">
            <td class="admin_table_cell">{{ item.title.en }}</td>
            <td class="admin_table_cell">{{ item.user.username }}</td>
            <td class="admin_table_cell">{{ item.date | date('y-m-d') }}</td>
            <td class="admin_table_cell">{{ item.hidden ? "Yes" : "No" }}</td>
            <td class="admin_table_cell admin_table_actions">
                <a href="/admin/news/edit?news_id=291"><img src="/img/icons/edit.png" alt="edit"></a>
                <a href="/admin/news/delete?news_id=291"><img src="/img/icons/delete.png" alt="delete"></a>
            </td>
            <td class="admin_table_cell admin_table_actions action_delete">
                <input type="checkbox" value="291" name="action[]" class="actioncheckbox">
            </td>
        </tr>
        {% else %}
        <tr colspan="6">
            <td class="admin_table_cell">No records</td>
        </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr class="admin_table_row admin_table_actions_row">
            <td class="admin_table_cell admin_table_actions" colspan="5">
                <img src="/img/icons/add.png" alt="add"> <a href="{{ path('admin-news-add') }}">Add</a>
            </td>
            <td class="admin_table_cell action_delete">
                <a href="#" onclick="return deleteMultiple('/admin/news/delete', 'news_id', $('.actioncheckbox'));"><img src="/img/icons/delete.png" alt="Delete the selected items"></a>
            </td>
        </tr>
    </tfoot>
</table>
{% endblock %}
