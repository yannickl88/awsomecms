{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block content %}
<h2>Users overview ({{ items | length }} items)</h2>

<table class="admin_table">
    <thead>
        <tr class="admin_table_header">
            <th class="admin_table_header">Name</th>
            <th class="admin_table_header admin_table_actions">
                <img src="/img/icons/add.png" alt="add"> <a href="{{ path('admin-users-add') }}">Add</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
        <tr class="admin_table_row">
            <td class="admin_table_cell">{{ item.username }}</td>
            <td class="admin_table_cell admin_table_actions">
                <a href="{{ path('admin-users-edit', { 'user' : item.id }) }}"><img src="/img/icons/edit.png" alt="edit"></a>
                <a href="{{ path('admin-users-delete', { 'users' : item.id }) }}"><img src="/img/icons/delete.png" alt="delete"></a>
            </td>
            <td class="admin_table_cell admin_table_actions action_delete">
                <input type="checkbox" value="{{ item.id }}" class="actioncheckbox">
            </td>
        </tr>
        {% else %}
        <tr colspan="3">
            <td class="admin_table_cell">No records</td>
        </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr class="admin_table_row admin_table_actions_row">
            <td class="admin_table_cell admin_table_actions" colspan="2">
                <img src="/img/icons/add.png" alt="add"> <a href="{{ path('admin-users-add') }}">Add</a>
            </td>
            <td class="admin_table_cell action_delete">
                <a href="#" onclick="return deleteMultiple('{{ path('admin-users-delete', { 'users' : '-PLACEHOLDER-' }) }}', false,  $('.actioncheckbox'));"><img src="/img/icons/delete.png" alt="Delete the selected items"></a>
            </td>
        </tr>
    </tfoot>
</table>
{% endblock %}
